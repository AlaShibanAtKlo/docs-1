{
    "compilerOptions": {
        "target": "ES2016",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "jsx": "react",
        "module": "esnext",
        "outDir": "./build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": [
            "es5",
            "es6",
            "dom",
            "DOM.Iterable",
            "es2015.promise"
        ],
        "sourceMap": true,
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "build",
    ],
    "compileOnSave": true
}